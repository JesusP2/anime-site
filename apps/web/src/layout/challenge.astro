---
import MainLayout from "@/layout/main.astro";
interface Props {
	title: string;
	description?: string;
	image?: string;
	path?: string;
}
const { title, description, image, path } = Astro.props;
---

<MainLayout page="Search" searchType="Anime" title={title} description={description} image={image} path={path}>
	<div class="max-w-3xl mx-auto">
		<div class="container mx-auto">
			<div class="flex items-center gap-3 mb-6">
				<h1 class="text-3xl font-bold">{title}</h1>
			</div>
			<slot />
		</div>
	</div>
</MainLayout>
