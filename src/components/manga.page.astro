---
import type { FullMangaRecord } from "@/lib/types";
import { Badge } from "@/components/ui/badge";
import { StatusDropdown } from "./status-dropdown";
import type { User } from "better-auth";
type Props = {
  manga: FullMangaRecord & { entityStatus?: string };
  user: User | null;
};
const { manga, user } = Astro.props;
const mangaTitle =
  manga.titles?.find((title) => title.type === "English")?.title ||
  manga.titles?.find((title) => title.type === "Default")?.title;
---

<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col xl:flex-row justify-between gap-x-8">
    <div class="xl:w-1/3 min-w-[300px]">
      <img
        src={manga.images?.webp?.large_image_url}
        alt={mangaTitle}
        class="w-full max-w-sm xl:max-w-7xl mx-auto rounded-lg shadow-lg mb-5"
      />
    </div>

    <div class="flex-1">
      <h1 class="text-4xl font-bold mb-2 dark:text-white">
        {mangaTitle}
      </h1>
      <div class="mb-4">
        {
          manga.titles
            ?.filter(
              (title) =>
                title.type &&
                ["English", "Default", "Japanese"].includes(title.type),
            )
            .map((title) => (
              <Badge className="mr-4 mt-2" variant="secondary">
                {title.title} ({title.type})
              </Badge>
            ))
        }
      </div>

      <div class="grid grid-cols-1 grid-cols-4 gap-4 mb-6 max-w-lg">
        {
          manga.score ? (
            <div class="bg-blue-50 dark:bg-blue-900/30 grid place-items-center p-3 rounded-lg text-center">
              <div>
                <p class="text-xs sm:text-[15px] font-bold text-blue-600 dark:text-blue-400">
                  ‚≠ê {manga.score}
                </p>
                <p class="text-xs sm:text-[15px] text-gray-600 dark:text-gray-400">
                  Score
                </p>
              </div>
            </div>
          ) : (
            "Unknown"
          )
        }
        {
          manga.rank ? (
            <div class="bg-purple-50 dark:bg-purple-900/30 grid place-items-center p-3 rounded-lg text-center">
              <div>
                <p class="text-xs sm:text-[15px] font-bold text-purple-600 dark:text-purple-400">
                  #{manga.rank}
                </p>
                <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">
                  Rank
                </p>
              </div>
            </div>
          ) : (
            "Unknown"
          )
        }
        {
          manga.popularity ? (
            <div class="bg-green-50 dark:bg-green-900/30 grid place-items-center p-3 rounded-lg text-center">
              <div>
                <p class="text-xs sm:text-[15px] font-bold text-green-600 dark:text-green-400">
                  #{manga.popularity}
                </p>
                <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">
                  Popularity
                </p>
              </div>
            </div>
          ) : (
            "Unknown"
          )
        }
        {
          manga.members ? (
            <div class="bg-orange-50 dark:bg-orange-900/30 grid place-items-center p-3 rounded-lg text-center">
              <div>
                <p class="text-xs sm:text-[15px] font-bold text-orange-600 dark:text-orange-400">
                  {manga.members.toLocaleString()}
                </p>
                <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">
                  Members
                </p>
              </div>
            </div>
          ) : (
            "Unknown"
          )
        }
      </div>

      <StatusDropdown data={manga} entityType="MANGA" user={user} client:load />

      <div class="mt-4">
        {
          manga.synopsis ? (
            <div class="mb-6">
              <h2 class="text-xl font-semibold mb-2 dark:text-white">
                Synopsis
              </h2>
              <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                {manga.synopsis}
              </p>
            </div>
          ) : (
            "Unknown"
          )
        }
      </div>

      <h2 class="text-xl font-semibold mb-3 dark:text-white">Information</h2>
      <div class="bg-white dark:bg-background rounded-lg p-5 shadow-sm">
        <div class="space-y-4">
          <div class="flex border-b border-gray-100 dark:border-gray-700 pb-3">
            <div class="w-32 text-gray-500 dark:text-gray-400">Type</div>
            <div class="text-gray-900 dark:text-gray-100">{manga.type}</div>
          </div>

          <div class="flex border-b border-gray-100 dark:border-gray-700 pb-3">
            <div class="w-32 text-gray-500 dark:text-gray-400">
              Chapters | Volumes
            </div>
            <div class="text-gray-900 dark:text-gray-100">
              {manga.chapters || manga.volumes || "Unknown"}
            </div>
          </div>

          <div class="flex border-b border-gray-100 dark:border-gray-700 pb-3">
            <div class="w-32 text-gray-500 dark:text-gray-400">Status</div>
            <div class="text-gray-900 dark:text-gray-100">{manga.status}</div>
          </div>

          <div class="flex border-b border-gray-100 dark:border-gray-700 pb-3">
            <div class="w-32 text-gray-500 dark:text-gray-400">Genres</div>
            <div class="text-gray-900 dark:text-gray-100">
              <div class="flex flex-wrap gap-2">
                {manga.genres}
              </div>
            </div>
          </div>

          <div class="flex border-b border-gray-100 dark:border-gray-700 pb-3">
            <div class="w-32 text-gray-500 dark:text-gray-400">
              Demographics
            </div>
            <div class="text-gray-900 dark:text-gray-100">
              {
                manga.demographics?.map((demographic) => (
                  <Badge variant="secondary">{demographic.name}</Badge>
                )) ?? "Unknown"
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
