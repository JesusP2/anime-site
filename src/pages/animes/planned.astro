---
import MainLayout from "@/layout/main.astro";
import { EntityWithStatusGrid } from "@/components/entity-with-status-grid";
import { Pagination } from "@/components/pagination";
import { SearchWithFilters } from "@/components/search";
import { animeFilters } from "@/lib/anime/filters";
import { getAnimeRecordsByStatus } from "@/lib/entity-records";
import { TrackedAnimeRecordsKey } from "@/lib/constants";

const animesPerPage = 25;
const { animesCount, animeRecords, currentPage } =
  await getAnimeRecordsByStatus(Astro, "planned", animesPerPage);
---

<MainLayout title="title">
  <SearchWithFilters
    url={new URL(Astro.url)}
    options={animeFilters}
    client:load
  />
  <EntityWithStatusGrid
    records={animeRecords.isOk() ? animeRecords.value : []}
    entityStatus="planned"
    localStorageKey={TrackedAnimeRecordsKey}
    user={Astro.locals.user}
    client:load
  />
  <div class="flex justify-center my-6">
    <Pagination
      url={new URL(Astro.url)}
      lastVisiblePage={Math.ceil(
        (animesCount.isOk() ? animesCount.value : 1) / animesPerPage,
      )}
      currentPage={currentPage}
      client:load
    />
    }
  </div>
</MainLayout>
